<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8 offset2 well">
      <%= form_for @comment do |f| %>

        <% if @comment.errors.any? %>
          <div id="errorExplanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited
              this post from being saved:</h2>
            <ul>
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
          <% end %>

        <%= f.hidden_field :user_id, :value => current_user.id%>
        <%= f.hidden_field :commenter, :value => current_user.email %>
        <%= f.hidden_field :post_id, :value => @this_post_id%>
        <%= f.label "Comentario:" %><br />
        <%= f.text_area :body, :class => "form-control", :rows => 3 %><br /><br />
        
        <div class="row-fluid">
          <div class="span2 offset8">
            <%= f.submit "Publicar", :class => "btn btn-success btn-lg btn-block" %>
          </div>
          <div class="span2">
            <%= link_to 'Volver', posts_path, :class => "btn btn-default btn-lg btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
